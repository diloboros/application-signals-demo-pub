<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <include resource="org/springframework/boot/logging/logback/base.xml"/>
  <!-- Required for Loglevel managment into the Spring Petclinic Admin Server-->
  <jmxConfigurator/>
  
  <!-- Add file appender with trace IDs -->
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>/var/log/application-signals/customers.log</file>
    <append>true</append>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} trace_id=%mdc{trace_id} span_id=%mdc{span_id} trace_flags=%mdc{trace_flags} %5p [%t] %logger{36} - %m%n</pattern>
    </encoder>
  </appender>
  
  <!-- Add the file appender to root logger -->
  <root level="INFO">
    <appender-ref ref="FILE" />
  </root>
</configuration>
