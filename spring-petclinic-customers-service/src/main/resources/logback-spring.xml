<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Include Spring Boot's base configuration -->
    <include resource="org/springframework/boot/logging/logback/base.xml"/>
    
    <!-- Required for Loglevel management into the Spring Petclinic Admin Server-->
    <jmxConfigurator/>
    
    <!-- Override the console appender to include trace IDs -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN:-%clr(%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr([traceId=%X{trace_id:-} spanId=%X{span_id:-}]){blue} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}</pattern>
            <charset>${CONSOLE_LOG_CHARSET:-${file.encoding:-UTF-8}}</charset>
        </encoder>
    </appender>
    
    <!-- File appender with trace IDs for CloudWatch Agent -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/log/application-signals/customers.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>/var/log/application-signals/customers-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} ${LOG_LEVEL_PATTERN:-%5p} ${PID:- } --- [%t] [traceId=%X{trace_id:-} spanId=%X{span_id:-}] %-40.40logger{39} : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}</pattern>
            <charset>${FILE_LOG_CHARSET:-${file.encoding:-UTF-8}}</charset>
        </encoder>
    </appender>
    
    <!-- JSON file appender for structured logs (better for CloudWatch Logs queries) -->
    <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/log/application-signals/customers-json.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>/var/log/application-signals/customers-json-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"service":"customers-service-ec2-java"}</customFields>
            <includeMdc>true</includeMdc>
            <includeMdcKeyName>trace_id</includeMdcKeyName>
            <includeMdcKeyName>span_id</includeMdcKeyName>
            <includeMdcKeyName>trace_flags</includeMdcKeyName>
        </encoder>
    </appender>
    
    <!-- Root logger configuration -->
    <root level="${logging.level.root:-INFO}">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
        <appender-ref ref="JSON_FILE" />
    </root>
    
    <!-- Application-specific logger -->
    <logger name="org.springframework.samples.petclinic" level="DEBUG" />
</configuration>
